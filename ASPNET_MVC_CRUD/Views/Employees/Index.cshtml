@model List<ASPNET_MVC_CRUD.Models.Domain.Employee>
@{
}
<style>
    body {
        background-color: lightsteelblue;
    }

    .btn-primary {
        background-color: #279EFF;
        margin-top: 10px;
        width: 80px;
        height: 40px;
        border: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }
    .linkStyle{
        text-decoration: none;
        color: white;
    }
</style>

<h1 class="" style="padding-bottom: 30px; color: darkblue; margin-top:30px;">Users</h1>
<div class="container" style="background-color: whitesmoke; box-shadow:0 0 5px rgba(0, 0, 0, 0.3); padding-top: 30px; border-radius: 10px">
    <div class="row justify-content-center">
        <div class="col-md-80">

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Contact Number</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.Name</td>
                            <td>@employee.Contact</td>
                            <td>@employee.Email</td>
                            <td><button class="btn btn-primary"><a href="Employees/View/@employee.Id" class="linkStyle">View</a></button></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
